<div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
  <div id="<%= dom_id consumption %>" class="w-full sm:w-auto my-5 space-y-5">
    <div>
      <%= consumption.value %> <%= consumption.unit %>
    </div>

    <div>
      <strong class="block font-medium mb-1">Measured at:</strong>
      <%= consumption.measured_at %>
    </div>
  </div>
  <% if current_page?(action: :index) || current_page?("/") %>
    <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
      <%= link_to "Show", consumption, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
      <%= link_to "Edit", edit_consumption_path(consumption), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
      <%= button_to "Destroy", consumption, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>
